   var a=['1','2','3','4','5','6','7','8','9'];
function shuffle(array) {
  var currentIndex = array.length, temporaryValue, randomIndex;

  while (0 !== currentIndex) {

    randomIndex = Math.floor(Math.random() * currentIndex);
    currentIndex -= 1;

    temporaryValue = array[currentIndex];
    array[currentIndex] = array[randomIndex];
    array[randomIndex] = temporaryValue;
  }

  return array;
}
var z=shuffle(a);

   document.getElementById("1").value = z[0];
document.getElementById("1").style.background=document.getElementById(c[Number(z[0])]).style.background;

   document.getElementById("2").value = z[1];
document.getElementById("2").style.background=document.getElementById(c[Number(z[1])]).style.background;

   document.getElementById("3").value = z[2];
document.getElementById("3").style.background=document.getElementById(z[2]).style.background;

   document.getElementById("4").value = z[3];  document.getElementById("4").style.background=document.getElementById(z[3]).style.background;
   
   document.getElementById("5").value = z[4]; document.getElementById("5").style.background=document.getElementById(z[4]).style.background;
   
   document.getElementById("6").value = z[5]; document.getElementById("6").style.background=document.getElementById(z[5]).style.background;
   
